<%- include("partials/header") -%>

    <section>
        <div>
            <ul>
                <a href="/recipeTypes/all">
                    <li>All</li>
                </a>
                <a href="/recipeTypes/Starter">
                    <li>Starters</li>
                </a>
                <a href="/recipeTypes/Main Course">
                    <li>Main Course</li>
                </a>
                <a href="/recipeTypes/Soups">
                    <li>Soups</li>
                </a>
                <a href="/recipeTypes/Desserts">
                    <li>Desserts</li>
                </a>
            </ul>
            <span>You have <b>
                    <% if (totalRecipe) {%>
                        <%= totalRecipe %>
                            <% }%>
                </b> recipes to explore!</span>
        </div>
        <div class="mt-5">
            <div class="row">
                <div class="card-deck">
                    <% for(let i=0; i<recipeDetails.length;i++){ %>
                        <% let postRoute="posts/" + recipeDetails[i].recipe_id +"-"+recipeDetails[i].recipe_title %>
                            <a href=<%- postRoute %> target="_blank">
                                <div id="" class="card mb-3" style="min-width: 18rem; max-width: 18rem; min-height: 24rem; max-height: 24rem; ">
                                    <img class="card-img-top"
                                        style="min-width: 14rem; max-width: 14rem; min-height: 14rem; max-height: 14rem;"
                                        src=<%=recipeDetails[i].recipe_image_reference %> alt="Card image cap">
                                    <div class="card-body">
                                        <p class="card-title">
                                            <%= recipeDetails[i].recipe_title %>
                                        </p>
                                        <p class="card-text">Author: <%= recipeDetails[i].recipe_author %>
                                            <br>
                                            Posted: <%= new Date(recipeDetails[i].recipe_posted_on).toLocaleDateString('en-US') %>
                                        </p>
                                    </div>
                                </div>
                            </a>
                            <% } %>
                </div>
            </div>
        </div>
    </section>
    </div>